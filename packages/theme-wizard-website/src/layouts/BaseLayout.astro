---
export interface Props {
  title?: string;
  description?: string;
  scraperUrl?: string;
}

const { title = 'Theme Wizard', description = 'Preview and analyze website themes', scraperUrl } = Astro.props;
---

<!doctype html>
<html lang="nl-NL">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {scraperUrl ? <meta name="scraper-api" content={scraperUrl} /> : null}
    <title>{title}</title>
    <style>
      body {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <slot />

    <script>
      import '@nl-design-system-community/theme-wizard-lit-components';
    </script>
  </body>
</html>
