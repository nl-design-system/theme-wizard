---
import '@utrecht/root-css/dist/index.css';
import '@utrecht/body-css/dist/index.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Theme Wizard', description = 'Preview and analyze website themes' } = Astro.props;
---

<!doctype html>
<html lang="nl-NL" class="utrecht-root">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <style is:global>
      theme-wizard-app:not(:defined) {
        display: none;
      }
    </style>
    <script>
      // TODO: import this when new version of MA is released
      // import 'node_modules/@nl-design-system-community/ma-design-tokens/src/font.js';
      // Then: remove these when importing from MA theme works
      import '@fontsource/fira-sans/400.css';
      import '@fontsource/fira-sans/700.css';
      import '@fontsource/source-sans-pro/400.css';
      import '@fontsource/source-sans-pro/700.css';
      // <End TODO>
    </script>
  </head>
  <body class="utrecht-body">
    <slot />

    <script>
      import '@nl-design-system-community/theme-wizard-app';
    </script>
  </body>
</html>
