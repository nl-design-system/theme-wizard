---
import favicon from '../assets/favicon.svg';
import '../styles/theme.css';

export interface Props {
  title?: string;
  description?: string;
  scraperUrl?: string;
}

const { title = 'Theme Wizard', description = 'Preview and analyze website themes', scraperUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {scraperUrl ? <meta name="scraper-api" content={scraperUrl} /> : null}
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <!-- <script type="module" src="/build/theme-wizard-website.esm.js"></script> -->
    <script>
      import '@nl-design-system-community/theme-wizard-lit-components';
    </script>
  </body>
</html>
