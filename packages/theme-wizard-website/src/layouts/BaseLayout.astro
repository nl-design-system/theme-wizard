---
import '@utrecht/root-css/dist/index.css';
import '@utrecht/body-css/dist/index.css';

export interface Props {
  title?: string;
  description?: string;
  scraperUrl?: string;
}

const { title = 'Theme Wizard', description = 'Preview and analyze website themes', scraperUrl } = Astro.props;
---

<!doctype html>
<html lang="nl-NL" class="utrecht-root">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {scraperUrl ? <meta name="scraper-api" content={scraperUrl} /> : null}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="utrecht-body">
    <slot />

    <script>
      import '@nl-design-system-community/theme-wizard-app';
    </script>
  </body>
</html>
