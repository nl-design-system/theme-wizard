{
  "name": "@nl-design-system-community/theme-wizard-website",
  "type": "module",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/nl-design-system/theme-wizard.git",
    "directory": "packages/theme-wizard-website"
  },
  "private": true,
  "scripts": {
    "dev": "API_HOST=http://localhost:9491 astro dev",
    "build": "pnpm run clean && astro build",
    "clean": "rm -rf dist .astro build",
    "lint": "pnpm run --sequential '/^lint:.+$/'",
    "lint:astro": "astro check",
    "lint:css": "stylelint .",
    "lint-fix": "pnpm run --sequential '/^lint-fix:.+$/'",
    "lint-fix:css": "pnpm run lint:css --fix",
    "preview": "astro preview",
    "astro": "astro",
    "test-install-browsers": "playwright install chromium --no-shell",
    "test-e2e": "playwright test"
  },
  "dependencies": {
    "@nl-design-system-community/ma-design-tokens": "2.5.0",
    "@nl-design-system-community/theme-wizard-lit-components": "workspace:*",
    "@nl-design-system-community/templates": "workspace:*",
    "@vercel/related-projects": "1.0.0",
    "astro": "5.14.1"
  },
  "devDependencies": {
    "@playwright/test": "1.56.0",
    "postcss-html": "1.8.0",
    "stylelint": "16.22.0",
    "stylelint-config-astro": "2.0.0"
  }
}
