{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "types": ["@stencil/core"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2021"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
