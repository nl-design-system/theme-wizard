---
import BaseLayout from '../layouts/BaseLayout.astro';

// Theme configuration - can be made dynamic later
const themeData = {
  colors: {
    primary: '#ffffff',
    secondary: '#000000',
    background: '#ffffff',
  },
  typography: {
    bodyFontFamily: "'Times New Roman', serif",
    headingFontFamily: "'Times New Roman', serif",
  },
  sourceUrl: 'https://www.utrecht.nl/',
};
---

<BaseLayout title="Theme Wizard - Stencil POC" description="Preview and analyze website themes" themeData={themeData}>
  <theme-app>
    <theme-sidebar
      slot="sidebar"
      source-url="https://documentatie-git-feat-2654-html-stappen-f9d4f8-nl-design-system.vercel.app/examples/zonder-front-end-framework.html#"
      heading-font="system-ui, sans-serif"
      body-font="system-ui, sans-serif"
      theme-class="voorbeeld-theme"
      custom-css=""></theme-sidebar>

    <theme-preview
      slot="preview"
      id="theme-preview"
      url="https://www.utrecht.nl/"
      heading-font-family="'Times New Roman', serif"
      body-font-family="'Times New Roman', serif"></theme-preview>
  </theme-app>
</BaseLayout>

<style>
  body {
    font-family: system-ui, sans-serif;
  }
</style>
