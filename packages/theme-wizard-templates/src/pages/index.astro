---
import ClientInit from '../components/ClientInit.astro';
import { TEMPLATES } from '../templates';
import ClientInit from '../components/ClientInit.astro';
const items = TEMPLATES.map(({ name, pages }) => ({ title: name, pages }));
---

<html>
  <body>
    <h1>Templates</h1>

    {
      items.map(({ title, pages }) => (
        <>
          <h2>{title}</h2>
          <ul>
            {pages.map(({ name, value }) => (
              <li>
                <a href={value}>{name}</a>
              </li>
            ))}
          </ul>
        </>
      ))
    }
    <ClientInit />
  </body>
</html>
