---
import PageLayout from '../../layouts/PageLayout.astro';
import cookiesPage from '@nl-design-system-community/clippy-components/patterns/cookie-consent/cookies-page.html?raw';
import cookieForm from '@nl-design-system-community/clippy-components/patterns/cookie-consent/cookie-form.html?raw';

// Replace the <clippy-cookie-form> placeholder with the actual form content
const pageWithForm = cookiesPage.replace('<clippy-cookie-form></clippy-cookie-form>', cookieForm);

export const detail = {
  name: 'Cookie settings page',
  module: 'Preview components',
  value: 'cookies',
};
---

<PageLayout sideNav={false} showCookieConsent={false}>
  <div slot="content" set:html={pageWithForm} />
</PageLayout>
