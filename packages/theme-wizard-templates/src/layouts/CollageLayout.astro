---
import '@nl-design-system-community/ma-design-tokens/dist/theme.css';
import '@utrecht/component-library-css/dist/index.css';
import '../theme.css';
import './styles.css';

import ClientInit from '../components/ClientInit.astro';

export interface Props {
  title?: string;
}
---

<html lang="nl" class="ma-theme preview-theme utrecht-page-layout">
  <head>
    <style>
      @media print {
        @page {
          size: landscape;
          margin-inline-start: 0;
          margin-inline-end: 0;
        }
      }
    </style>
  </head>
  <body class="utrecht-page-body">
    <div class="utrecht-page-body__content">
      <slot />
    </div>
    <ClientInit />
  </body>
</html>
