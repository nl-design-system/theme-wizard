---
import '@nl-design-system-unstable/start-design-tokens/dist/theme.css';
import '@nl-design-system-community/theme-wizard-app/theme.css';
import '@utrecht/component-library-css';
import '@nl-design-system-candidate/button-css/button.css';
import '@nl-design-system-candidate/link-css/link.css';
import '@nl-design-system-candidate/heading-css/heading.css';
import '@nl-design-system-candidate/paragraph-css/paragraph.css';
import '@nl-design-system-candidate/skip-link-css/skip-link.css';
import ClientInit from '../components/ClientInit.astro';
import DevTools from '../components/DevTools.astro';

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
  htmlClasses?: string;
  bodyClasses?: string;
}

const {
  title = 'Gemeente Voorbeeld',
  description = 'Gemeente Voorbeeld website',
  lang = 'nl',
  htmlClasses = 'utrecht-page-layout utrecht-root start-theme preview-theme',
} = Astro.props;
---

<!doctype html>
<html lang={lang} class={htmlClasses}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <slot name="head" />
    <title>{title}</title>
  </head>

  <body>
    <!-- <DevTools /> -->
    <slot />
    <ClientInit />
  </body>
</html>
