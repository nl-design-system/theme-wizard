---
import '@nl-design-system-unstable/start-design-tokens/dist/theme.css';
import '@utrecht/component-library-css';
import './styles.css';
import ClientInit from '../components/ClientInit.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Gemeente Voorbeeld', description = 'Gemeente Voorbeeld website' } = Astro.props;
---

<!doctype html>
<html lang="nl-NL" class="start-theme">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="utrecht-body">
    <slot />

    <ClientInit />
  </body>
</html>
