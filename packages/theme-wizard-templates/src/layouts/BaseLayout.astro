---
import '@nl-design-system-unstable/start-design-tokens/dist/theme.css';
import '@utrecht/component-library-css';
import ClientInit from '../components/ClientInit.astro';

export interface Props {
  isCollage?: boolean;
  title?: string;
  description?: string;
}

const { title = 'Gemeente Voorbeeld', description = 'Gemeente Voorbeeld website', isCollage = false } = Astro.props;

// Check if we're in standalone mode (defined in astro.config.mjs)
const isStandalone = typeof __STANDALONE_PACKAGE__ !== 'undefined' && __STANDALONE_PACKAGE__ === true;
---

<!doctype html>

<html lang="nl" class="utrecht-page-layout utrecht-root start-theme preview-theme">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    {isCollage && (
      <style>
        @media print {
          @page {
            size: landscape;
            margin-inline-start: 0;
            margin-inline-end: 0;
          }
        }
      </style>
      )}

      {isStandalone && (
        <style>
          html {
            scroll-padding-block-start: calc(var(--basis-space-block-md) * 2 + 3rem);
          }
          body {
            padding-block-start: calc(var(--basis-space-block-md) * 2 + 3rem);
          }
        </style>
      )}
    <title>{title}</title>
  </head>

  <body class="utrecht-page-body">
    <slot />

    <ClientInit />
  </body>
</html>
