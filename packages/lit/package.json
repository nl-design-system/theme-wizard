{
  "name": "@nl-design-system-community/theme-wizard-lit-components",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/nl-design-system/theme-wizard.git",
    "directory": "packages/lit"
  },
  "scripts": {
    "dev": "vite",
    "types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "pnpm run types && vite build",
    "clean": "rimraf dist/",
    "lint": "pnpm run --sequential '/^lint:.+$/'",
    "lint:css": "stylelint .",
    "lint-fix:css": "pnpm run lint:css --fix",
    "lint-build": "tsc --noEmit --project tsconfig.json",
    "test": "pnpm run '/^test:.+$/'",
    "test-build": "vitest --run --coverage",
    "test-install-browsers": "playwright install chromium",
    "test:unit": "vitest --run",
    "preview": "vite preview"
  },
  "dependencies": {
    "@nl-design-system-candidate/code-css": "2.0.3",
    "@nl-design-system-candidate/heading-css": "1.1.1",
    "@nl-design-system-candidate/paragraph-css": "2.1.1",
    "@nl-design-system-community/css-scraper": "workspace:*",
    "@nl-design-system-community/design-tokens-schema": "workspace:*",
    "@nl-design-system-community/ma-design-tokens": "2.5.0",
    "@utrecht/select-css": "2.0.0",
    "@utrecht/web-component-library-stencil": "3.6.0",
    "lit": "3.3.1"
  },
  "devDependencies": {
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "playwright": "1.56.1",
    "postcss-lit": "1.3.1",
    "rimraf": "6.0.1",
    "typescript": "5.9.3",
    "vite": "7.1.7",
    "vitest": "3.2.4"
  }
}
