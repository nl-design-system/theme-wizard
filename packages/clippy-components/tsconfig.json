{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2024", "DOM"],
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "types": ["vite/client"],
    "importHelpers": false,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": ["index.ts", "src/**/*", "test/**/*", "patterns/**/*", "vite-env.d.ts"]
}
